{
    "applications": {
        "gecko": {
            "id": "rodgard747@gmail.com",
            "strict_min_version": "42.0"
        }
    },
    "manifest_version": 2,
    "name": "Capture Image",
    "version": "1.0",
    "default_locale": "pl",

    "description": "Captures images by just two clicks.",

    "icons": {
        "48": "icons/icon-48.png"
    },

    "background": {
        "scripts": ["background.js"]
    },
  
    "permissions": [
        "menus",
        "activeTab",
        "downloads",
        "storage"
    ],
  
    "options_ui": {
        "page": "options.html",
        "browser_style": true
    }
}